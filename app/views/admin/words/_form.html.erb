<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @word] do |f| %>

      <%= render "shared/error", object: f.object %>

      <div class="field">
        <%= f.label :content %>
        <%= f.text_field :content, class: "form-control" %>

        <%= f.label I18n.t "category" %>
        <%= f.select(:category_id, Category.pluck(:title, :id), {}, {class: "form-control"}) %>
      </div>
      <h1><%= I18n.t(:answer) %></h1>

      <%= render "form_answer", f: f, count_answer: @count_answer %>

      <div class="actions">
        <table class="w100">
          <tr>
            <td width="48%">
              <%= f.submit I18n.t(:submit), class: "btn btn-primary", style: "width: 100%;" %>
            </td>
            <td width="4%">
            </td>
            <td width="48%">
              <%= link_to (t "add_answer"), "#", class: "btn btn-primary control", id: "add", style: "width: 100%;" %>
            </td>
          </tr>
        </table>
      </div>
    <% end %>
    <br>
    <div align="right">
      <%= link_to I18n.t(:back_to_listing_words), admin_words_path %>
    </div>
  </div>
</div>
