<div class="row">
  <div class="col-md-2">
  </div>
  <div class="col-md-2">
    <%= I18n.t "word.category" %>
    <%= select_tag "category_id", options_from_collection_for_select(@categories, "id", "title", params[:category_id]), include_blank: I18n.t("word.all") %>
  </div>
  <div class="col-md-2">
    <%= I18n.t "word.sort_by" %>
    <%= select_tag "sort_by", options_for_select(Settings.word.sort_by_list, params[:sort_by]) %>
  </div>
  <% Settings.word.radio_button_array_show.each_with_index do |radio_button, index| %>
    <div class="col-md-1" align="center">
      <%= radio_button %>
      <%= radio_button_tag("learn", Settings.word.radio_button_array_var[index], checked = (params[:learn] == Settings.word.radio_button_array_var[index]) || (params[:learn].blank?)) %>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-md-2">
  </div>
  <div class="col-md-4">
    <%= text_field_tag "word_search", params[:word_search], class:"form-control" %>
  </div>
  <div class="col-md-2">
    <%= button_tag I18n.t("word.search"), class: "btn btn-primary", style: "width: 100%;" %>
  </div>
</div>
