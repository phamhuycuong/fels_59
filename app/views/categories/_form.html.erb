<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@category) do |category| %>
      <%= render 'error' %>
      
      <%= category.label :title %>
      <%= category.text_field :title, class: 'form-control' %>

      <%= category.submit I18n.t(:submit), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>