<div class="row">
  <div class="col-md-3">
    <%= render "users/summary", user: @user %>
    <br>
    <% if @follows.any? %>
      <div class="user_avatars">
        <% @follows.each do |follow| %>
          <%= link_to gravatar_for(follow, size: Settings.user.gravantar_size30), follow %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="col-md-9">
    <h3><%= @title %></h3>
    <%= render "user_follow", user: @user, follows: @follows %>
  </div>
</div>
