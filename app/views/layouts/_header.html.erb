<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to I18n.t(:menu_project_name), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to I18n.t(:menu_home), root_path %></li>
        <li><%= link_to I18n.t(:menu_help), "#" %></li>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= I18n.t(:menu_tool) %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to I18n.t(:menu_categories), categories_path %></li>
                <li><%= link_to I18n.t(:menu_word), words_path %></li>
                <li><%= link_to I18n.t(:menu_users), users_path %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to I18n.t(:menu_categories), categories_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name.capitalize %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to I18n.t(:menu_profile), current_user %></li>
              <li><%= link_to I18n.t(:menu_settings), edit_user_path(current_user)  %></li>
              <li><%= link_to I18n.t(:menu_users), users_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to I18n.t(:menu_logout), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to I18n.t(:menu_login), login_path %></li>
        <% end %>
       </ul>
    </nav>
  </div>
</header>
